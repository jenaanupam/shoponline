                <img src="../images/brand.png" alt="eShop On Web" />
            </a>

            @{
                if (string.IsNullOrEmpty(ViewBag.LoginPartialPath))
                {
                    @await Html.PartialAsync("_LoginPartial")
                }
                else
                {
                    string k = ViewBag.LoginPartialPath;
                    @await Html.PartialAsync(k + "_LoginPartial.cshtml");
                }
            }
            @*</section>*@

            @*</article>*@
        </div>
    </header>

    @RenderBody()


    <footer class="footerupdated">
        <div class="">
            <article class="">

              

                <section class="">
                    <div class="esh-app-footer-text hidden-xs"> All rights reserved 2018</div>
                </section>

            </article>
        </div>
    </footer>

    <environment names="Development">
        @*<script src="~/lib/jquery/dist/jquery.js"></script>*@
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        @*<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>*@
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)

    <script>

        var myIndex = 0;
        carousel();

        function carousel() {
            var i;
            var x = document.getElementsByClassName("mySlides");
            var dots = document.getElementsByClassName("demo");
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
                //  $(x[i]).fadeOut(500);
            }
            for (i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" w3-white", "");
            }

            if (myIndex == 0) {
                myIndex++;
                $(x[myIndex - 1]).fadeIn(100);
            }
            else {
                myIndex++;
                if (myIndex > x.length) { myIndex = 1 }
                // x[myIndex - 1].style.display = "block";
                $(x[myIndex - 1]).fadeIn(1000);
                dots[myIndex - 1].className += " w3-white";
            }
            setTimeout(carousel, 3000); // Change image every 3 seconds
        }

        var slideIndex = 1;
        showDivs(slideIndex);

        function plusDivs(n) {
            showDivs(slideIndex += n);
        }

        function currentDiv(n) {
            showDivs(slideIndex = n);
        }

        function showDivs(n) {
            var i;
            var x = document.getElementsByClassName("mySlides");
            var dots = document.getElementsByClassName("demo");
            if (n > x.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = x.length }
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            for (i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" w3-white", "");
            }
            //x[slideIndex - 1].style.display = "block";
            $(x[myIndex - 1]).fadeIn(1000);
            dots[slideIndex - 1].className += " w3-white";
            myIndex = slideIndex;
        }
    </script>
    <style>
        .footerupdated {
            position: fixed;
            right: 0;
            bottom: 0;
            left: 0;
            background-color: GrayText;
            text-align: center;
            /*background-image:url('../../wwwroot/images/twitter.png');*/
            background-position: left 95%;
            /*background-repeat: no-repeat;*/
            height: 28px;
            /*padding-left: 40px;*/
        }
    </style>
</body>
</html>
